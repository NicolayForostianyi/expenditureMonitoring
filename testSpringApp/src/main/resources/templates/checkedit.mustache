        </div>

        <div>
            {{#purchases}}
                <div>
                    <i>{{name}}</i>
                    <i>{{category}}</i>
                    <i>{{price}}</i>
                    <i>{{quantity}}</i>
                </div>
            {{/purchases}}
        </div>
    </body>
</html>